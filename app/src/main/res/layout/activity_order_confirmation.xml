<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFlightDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flight Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvFlightInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flight Information"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvPassengerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- 在此添加乘客信息的 TextView -->

    <Button
        android:id="@+id/btnAddPassenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Passenger"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/chkInsurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Flight Insurance"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCalculateTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Total"/>

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:layout_marginTop="16dp"/>

</LinearLayout>